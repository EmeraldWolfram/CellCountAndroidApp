<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="5"
        android:entries="@array/list_preference_entries"
        android:entryValues="@array/list_preference_entry_values"
        android:key="NumOfSquare"
        android:title="Number of Square" />

    <EditTextPreference
        android:defaultValue="10"
        android:inputType="numberDecimal"
        android:key="FinalVolume"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Final Volume" />

    <EditTextPreference
        android:defaultValue="10"
        android:inputType="numberDecimal"
        android:key="VolumeOfCell"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Volume Of Cell" />
</PreferenceScreen>
